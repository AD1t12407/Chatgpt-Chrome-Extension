{
    "manifest_version": 3,
    "name": "OpenAI Chrome Extension",
    "version": "1.0",
    "description": "A Chrome extension that integrates with OpenAI's API",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
      "https://api.openai.com/"
    ]
  }
  